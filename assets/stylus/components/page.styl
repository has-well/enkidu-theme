.custom-page
  h4
    font-size 1.25rem
    margin-bottom 7px
  h3
    font-size 1.75rem
    text-align center
    color $main
  p
    font-size 0.85rem
    padding-top 1px
  a
    color $main
    text-decoration auto
    cursor pointer
    &:hover
      text-decoration none
      color $main_yellow
.main-page
  border-bottom 32px solid $main_yellow